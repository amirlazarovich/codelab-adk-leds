<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:gravity="center">
    <!-- Red -->
    <TextView
        android:id="@+id/txt_red"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/toggle_red"
        android:singleLine="true"
        android:gravity="bottom"
        android:text="@string/red"
        android:textSize="28sp"/>

    <ToggleButton
        android:id="@+id/toggle_red"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentRight="true" />

    <!-- Green -->
    <TextView
        android:id="@+id/txt_green"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/toggle_green"
        android:layout_below="@id/txt_red"
        android:layout_marginTop="20dp"
        android:singleLine="true"
        android:gravity="bottom"
        android:text="@string/green"
        android:textSize="28sp"/>

    <ToggleButton
        android:id="@+id/toggle_green"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/txt_green"/>

    <!-- Yellow -->
    <TextView
        android:id="@+id/txt_yellow"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/toggle_yellow"
        android:layout_below="@id/txt_green"
        android:layout_marginTop="20dp"
        android:singleLine="true"
        android:gravity="bottom"
        android:text="@string/yellow"
        android:textSize="28sp"/>

    <ToggleButton
        android:id="@+id/toggle_yellow"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/txt_yellow"/>

    <!-- loader & ack -->
    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@android:style/Widget.ProgressBar.Small"
        android:indeterminate="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/ack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"/>

</RelativeLayout>